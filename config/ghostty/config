# keybindings
keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface
keybind = global:ctrl+f=toggle_quick_terminal
# tabs
keybind = cmd+s>t=new_tab
keybind = cmd+s>s=next_tab
keybind = cmd+s>h=previous_tab
keybind = cmd+s>comma=move_tab:-1
keybind = cmd+s>period=move_tab:1
# split
keybind = cmd+s>v=new_split:down
keybind = cmd+s>n=new_split:right
keybind = ctrl+t=goto_split:bottom
keybind = ctrl+h=goto_split:top
keybind = ctrl+e=goto_split:left
keybind = ctrl+u=goto_split:right
keybind = ctrl+shift+t=resize_split:down,50
keybind = ctrl+shift+h=resize_split:up,50
keybind = ctrl+shift+e=resize_split:left,50
keybind = ctrl+shift+u=resize_split:right,50

